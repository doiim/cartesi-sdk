{
  "compilerOptions": {
    "target": "es6", // Target a widely compatible JS version
    "module": "commonjs", // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es2020",
      "dom"
    ], // Include necessary libraries
    "outDir": "./dist", // Output directory for compiled code
    "rootDir": "./src", // Source code directory
    "strict": true, // Enforce type safety
    "esModuleInterop": true // Improve compatibility with other modules
  },
  "exclude": [
    "examples/**"
  ]
}